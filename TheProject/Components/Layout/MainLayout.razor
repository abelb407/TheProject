@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
        <a class="navbar-brand bg-dark text-white" href="/">Chemistry</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse bg-dark text-white" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="/notes" Match="NavLinkMatch.All">Notes</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="/quiz" Match="NavLinkMatch.All">Quiz</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="/leaderboard" Match="NavLinkMatch.All">Leaderboard</NavLink>
                </li>


            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <li class="navbar-text bg-dark text-white"> @context.User.Identity?.Name </li>
                        <li class="nav-item">
                            <NavLink class="nav-link  bg-dark text-white" href="/Account/Logout" Match="NavLinkMatch.All">Logout</NavLink>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link text-white" href="/Account/Login" Match="NavLinkMatch.Prefix">Login</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-white" href="/Account/Register" Match="NavLinkMatch.Prefix">Register</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<main class="container">
    <div class="p-2 rounded">
        @Body
    </div>
</main>